{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/src/**/*.js"
            ],
            "preLaunchTask": "gulp: build"
        },
        {
            "name": "Quick Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/src/**/*.js"
            ]
        },
        {
            "name": "Launch Extension tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/test/resources/sampleReactNativeProject",
                "--extensionDevelopmentPath=${workspaceRoot}",
                "--extensionTestsPath=${workspaceRoot}/test"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/src/**/*.js"
            ],
            "preLaunchTask": "gulp: build"
        },
        {
            "name": "Launch Localization Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--locale=zh-cn",
                "--extensionDevelopmentPath=${workspaceRoot}",
                "--extensionTestsPath=${workspaceRoot}/test/localization"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/src/**/*.js"
            ],
            "preLaunchTask": "gulp: build"
        },
        {
            "name": "Launch Smoke Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/smoke/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/test/smoke",
            "args": [
                "--config ./.mocharc.js ",
                "--reporter mocha-multi-reporters"
            ],
            "timeout": 240000,
            "stopOnEntry": false,
            "outFiles": [
                "${workspaceFolder}/test/smoke/out/**/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "npm: compile-smoke-tests"
        }
    ],
    "compounds": []
}