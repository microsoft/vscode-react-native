{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"sourceMaps": true,
			"outDir": "./out",
            "preLaunchTask": "build"
		},
		{
			"name": "mock-debug server",
			"type": "node",
			"request": "launch",
			"runtimeArgs": ["--harmony"],
			"program": "./src/mockDebug.ts",
			"stopOnEntry": false,
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outDir": "./out"
		},
		{
			"name": "mock test",
			"type": "mock",
			"request": "launch",
			"program": "README.md",
			"stopOnEntry": true
		},
		{
			"name": "Run Tests",
			"type": "node",
			"request": "launch",
			"program": "node_modules/mocha/bin/_mocha",
			"args": [
				"./out/tests",
				"--timeout", "999999",
				"--colors"
			],
			"sourceMaps": true,
			"outDir": "./out/",
            "preLaunchTask": "build"
		}
	]
}
